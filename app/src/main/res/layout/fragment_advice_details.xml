<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/advice"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="50dp"
    android:paddingTop="@dimen/half_static_spacing"
    android:paddingBottom="@dimen/half_static_spacing"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24sp"
    android:textColor="@color/colorPrimary"
    android:padding="@dimen/half_static_spacing"
    android:text="Let's get started"
    android:layout_margin="@dimen/half_static_spacing"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/advice"/>

  <TextView
    android:id="@+id/advice_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:paddingTop="3dp"
    app:layout_constraintTop_toBottomOf="@id/advice"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="Meditation is a simple practice available to all, which can reduce stress, increase calmness and clarity and promote happiness. Learning how to meditate is straightforward, and the benefits can come quickly. Here, we offer basic tips to get you started on a path toward greater equanimity, acceptance and joy. Take a deep breath, and get ready to relax."
    android:layout_margin="@dimen/half_static_spacing"
    android:padding="@dimen/half_static_spacing"/>


  <ImageView
    android:id="@+id/image_advice"
    android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:src="@drawable/meditation"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/advice_description"
    android:contentDescription="image of a person meditating"/>

<TextView
  android:id="@+id/open_diary_label"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintEnd_toStartOf="@id/open_diary"
  app:layout_constraintTop_toBottomOf="@id/image_advice"
  android:text="Feeling inspired?Tap here to go to your diary"/>
  <Button
    android:id="@+id/open_diary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/completed_text"
    android:layout_marginEnd="@dimen/half_static_spacing"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/image_advice"/>

  <TextView
    android:id="@+id/open_advice_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/open_advice"
    app:layout_constraintTop_toTopOf="@id/open_advice"
    android:text="Tap here to get another Advice"/>

  <Button
    android:id="@+id/open_advice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Advice"
    app:layout_constraintTop_toBottomOf="@id/open_diary"
    app:layout_constraintStart_toStartOf="@id/open_diary"
    app:layout_constraintEnd_toEndOf="@id/open_diary"/>



</androidx.constraintlayout.widget.ConstraintLayout>